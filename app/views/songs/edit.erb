<!-- ###############artists section ###################-->

  <h2> Update the artist for this song</h2>
  <h3>Artists</h3>


<!-- ############### checkbox  ###################-->
<!-- alphabetize and list checkboxes -->
  <% sorted_artists = Artist.all.sort_by{|artist| artist.name.downcase}%>
  <% sorted_artists.each do |artist| %>
    <input id="<%= artist.name %>" type="checkbox" name="artist[name]" value="<%= artist.name %>">
    <label for="artist_name"><%= artist.name %></label>
    <br>
  <% end %>

  <!-- ############or create_artist  ################-->

  <label for="Artist Name">Artist Name</label>
  <input type="text" name="artist[name]" id="Artist Name">




  <!-- ############### genres section ###################-->

  <br>
  <h2>Update the genre for this song</h2>
  <h3>Genres</h3>

<!-- ############### checkbox  ###################-->
<!-- alphabetize and list checkboxes -->

  <% sorted_genres = Genre.all.sort_by{|genre| genre.name.downcase}%>
  <% sorted_genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>" "checked" <% if @song.genres.include?(genre) %> >
    <label for="genre_name"><%= genre.name %></label>
    <br>
  <% end %>

    <!-- ############or create_artist  ################-->

  <label for="Genre Name">Genre Name: </label>
  <input type="text" name="genres[name]" id="Genre Name">



<!-- ####################### submit ###################-->
  <br>
  <br>
  <input type="submit" id="Edit">
